// prisma/schema.prisma
generator client {
  provider = "prisma-client"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
}

model ContactMessage {
  id        String   @id @default(cuid())
  createdAt DateTime @default(now())

  name    String?
  email   String?
  subject String?
  message String

  honeypot  String?
  ip        String?
  userAgent String?
}